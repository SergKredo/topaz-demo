{
  "name": "topaz-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "bridge": "node bridge/server.js",
    "demo:https": "npm run build && npm run bridge",
    "bridge:build-exe": "pkg bridge/server.js --targets node18-win-x64 --output bridge/dist/topaz-demo-bridge.exe",
    "build": "ng build",
    "build:pages": "ng build --base-href /topaz-demo/",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "express": "^4.21.2",
    "http-proxy-middleware": "^3.0.5",
    "rxjs": "~7.8.0",
    "selfsigned": "^2.4.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "jsdom": "^27.1.0",
    "pkg": "^5.8.1",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}